@model IEnumerable<EmergiaStoreMVC.Models.Invoice>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCustomerNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdSalespersonNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCustomerNavigation.IdCustomer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdSalespersonNavigation.IdSalesperson)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.IdInvoice">Edit</a>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.IdInvoice">Details</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdInvoice">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
